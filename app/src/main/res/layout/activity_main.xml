<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/answ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:text="HOLA"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@id/rest"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/rest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:lines="1"
            android:maxLines="1"
            android:text="hola"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Hola"
            android:hint="e.g 5"
            tools:ignore="ContentDescription"></TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        style="@style/Boton">

        <Button
            style="@style/Botonnumero"
            android:onClick="allclearact"
            android:text="AC"
            android:textColor="@color/material_dynamic_tertiary99"
            tools:ignore="TextSizeCheck,TextSizeCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/Botonnumero"
            android:onClick="backact"
            android:text="â—„"
            tools:ignore="TextSizeCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/Botonnumero"
            android:text=""
            tools:ignore="SpeakableTextPresentCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/operador"
            android:onClick="operation"
            android:text="/"
            android:textColor="#000000"
            tools:ignore="TextSizeCheck,VisualLintButtonSize">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout3"
        style="@style/Boton">

        <Button
            style="@style/Botonnumero"
            android:text="7"
            tools:ignore="TextSizeCheck,TextSizeCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/Botonnumero"
            android:text="8"
            tools:ignore="TextSizeCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/Botonnumero"
            android:text="9"
            tools:ignore="TextSizeCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/operador"
            android:onClick="operation"
            android:text="X"
            android:textColor="#000000"
            tools:ignore="TextSizeCheck,VisualLintButtonSize">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout6"
        style="@style/Boton">

        <Button
            style="@style/Botonnumero"
            android:text="4"
            tools:ignore="TextSizeCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/Botonnumero"
            android:text="5"
            tools:ignore="TextSizeCheck,TextSizeCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/Botonnumero"
            android:text="6"
            tools:ignore="TextSizeCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/operador"
            android:onClick="operation"
            android:text="-"
            android:textColor="#000000"
            tools:ignore="TextSizeCheck,VisualLintButtonSize">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout7"
        style="@style/Boton">

        <Button
            style="@style/Botonnumero"
            android:text="1"
            tools:ignore="TextSizeCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/Botonnumero"
            android:text="2"
            tools:ignore="TextSizeCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/Botonnumero"
            android:text="3"
            tools:ignore="TextSizeCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/operador"
            android:onClick="operation"
            android:text="+"
            android:textColor="#000000"
            tools:ignore="TextSizeCheck,VisualLintButtonSize">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout8"
        style="@style/Boton">

        <Button
            style="@style/Botonnumero"
            android:text="."
            tools:ignore="TextSizeCheck,TextSizeCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/Botonnumero"
            android:text="0"
            tools:ignore="TextSizeCheck,TextSizeCheck,VisualLintButtonSize">

        </Button>

        <Button
            style="@style/operador"
            android:onClick="ecualstoact"
            android:text="="
            android:textColor="#000000"
            tools:ignore="TextSizeCheck,VisualLintButtonSize">

        </Button>
    </LinearLayout>


</LinearLayout>
